# Supabase Configuration
# این فایل را کپی کنید و نام آن را به .env.local تغییر دهید
# سپس مقادیر واقعی را جایگزین کنید

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase Anon Key (Public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Site URL (برای production)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Google OAuth Configuration (برای فعال‌سازی Google OAuth)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Performance Optimizations
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
NEXT_SHARP_PATH=./node_modules/sharp

# برای پیدا کردن این مقادیر:
# 1. به Supabase Dashboard بروید
# 2. پروژه خود را انتخاب کنید
# 3. Settings > API
# 4. Project URL و anon public key را کپی کنید

# برای Google OAuth:
# 1. به Google Cloud Console بروید
# 2. APIs & Services > Credentials
# 3. OAuth 2.0 Client ID ایجاد کنید
# 4. Authorized redirect URIs را تنظیم کنید:
#    LOCALHOST: http://localhost:3000/auth/callback
#    PRODUCTION: https://your-domain.com/auth/callback
#    SUPABASE: https://your-project-id.supabase.co/auth/v1/callback

# نکات مهم برای Production:
# - این فایل را در .gitignore قرار دهید
# - هرگز service role key را در client-side استفاده نکنید
# - پس از تغییر این فایل، سرور را restart کنید
# - Google OAuth redirect URI باید دقیقاً با Supabase callback URL مطابقت داشته باشد
# - برای production، حتماً domain اصلی را در Google Console اضافه کنید
# - Site URL در Supabase باید با domain اصلی مطابقت داشته باشد

# YouTube API Configuration
# برای نمایش ویدیوهای یوتیوب در صفحه اصلی
# حداقل یکی از موارد زیر را تنظیم کنید (ترجیح: CHANNEL_ID یا HANDLE)

# کلید API یوتیوب (از Google Cloud Console)
YOUTUBE_API_KEY=your-youtube-api-key

# شناسه کانال (مانند: UCxxxxxxxxxxxxxxxxxxxxx)
# دقیق‌ترین و سریع‌ترین روش
YOUTUBE_CHANNEL_ID=

# هندل کانال (مانند: @your-handle)
# اگر شناسه ندارید از این استفاده کنید
YOUTUBE_CHANNEL_HANDLE=

# نام کاربری کانال قدیمی (مانند: your-username)
# فقط برای کانال‌های قدیمی با مسیر /user/
YOUTUBE_CHANNEL_USERNAME=

# آدرس کامل کانال (اختیاری، مانند: https://www.youtube.com/@your-handle)
# در صورت تنظیم، به‌صورت خودکار هندل/شناسه/نام‌کاربری استخراج می‌شود
YOUTUBE_CHANNEL_URL=

# TinyMCE Editor Configuration
# برای ویرایشگر متن در بخش ادمین
# می‌توانید از کلید رایگان استفاده کنید یا کلید شخصی خود را دریافت کنید
NEXT_PUBLIC_TINYMCE_API_KEY=no-api-key